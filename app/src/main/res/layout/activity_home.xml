<carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:background="@drawable/home_back"
    tools:context="com.iplay.concatenate.HomeActivity"

>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/home_title"
        android:gravity="center"
        android:layout_gravity="top|center"
        android:layout_marginTop="65dp"/>


        <carbon.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:id="@+id/home">

            <carbon.widget.ImageActionButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/home_quick_copy"
                android:id="@+id/quick_game"
                app:carbon_touchMargin="6dp"
                app:carbon_rippleStyle="borderless"
                app:carbon_rippleColor="@color/touchcolor"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                />

            <carbon.widget.ImageActionButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/home_join_copy"
                android:id="@+id/join_game"
                app:carbon_rippleColor="@color/touchcolor"
                app:carbon_rippleStyle="borderless"
                android:background="@null"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                />

            <carbon.widget.ImageActionButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/home_host_copy"
                android:id="@+id/host_game"
                app:carbon_rippleColor="@color/touchcolor"
                android:scaleType="centerCrop"
                app:carbon_rippleStyle="borderless"
                android:layout_centerInParent="true"
                />
        </carbon.widget.RelativeLayout>


    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:id="@+id/transition">
        <carbon.widget.FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"
            ></carbon.widget.FrameLayout>



    </io.codetail.widget.RevealFrameLayout>
    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:id="@+id/transition1">
        <carbon.widget.FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_profile"
            ></carbon.widget.FrameLayout>



    </io.codetail.widget.RevealFrameLayout>

    <com.iplay.concatenate.CircularProfilePicView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id ="@+id/profile_pic_user"

        android:layout_gravity="top|left"
        ></com.iplay.concatenate.CircularProfilePicView>

    <carbon.widget.ImageActionButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/home_hof"
        android:id="@+id/leaderboard"
        android:scaleType="centerCrop"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="right|top"
        />
</carbon.widget.FrameLayout>

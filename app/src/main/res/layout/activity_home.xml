<carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    android:background="@drawable/concat_back"
    tools:context="com.iplay.concatenate.HomeActivity"

>

            <com.iplay.concatenate.CircularProfilePicView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id ="@+id/profile_pic"
                android:layout_gravity="top|left"
                ></com.iplay.concatenate.CircularProfilePicView>
    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Select An Option"
        android:textSize="23dp"
        android:gravity="center"
        android:layout_gravity="top|center"
        android:layout_marginTop="15dp"/>

    <carbon.widget.TransitionLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:id="@+id/transition">

        <carbon.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:id="@+id/home">
            <carbon.widget.ImageActionButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/quick_game_icon"
                android:id="@+id/quick_game"
                app:carbon_touchMargin="6dp"
                app:carbon_rippleStyle="borderless"
                app:carbon_rippleColor="@color/carbon_white"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                />
            <carbon.widget.ImageActionButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/host_game_icon"
                android:id="@+id/host_game"
                app:carbon_rippleColor="@color/carbon_white"
                android:scaleType="centerCrop"
                app:carbon_rippleStyle="borderless"
                android:layout_centerInParent="true"
                />
            <carbon.widget.ImageActionButton
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/join_game_icon"
                android:id="@+id/join_game"
                app:carbon_rippleColor="@color/carbon_white"
                app:carbon_rippleStyle="borderless"
                android:background="@null"
                android:scaleType="centerCrop"
                app:carbon_elevation="1dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                />
        </carbon.widget.RelativeLayout>

        <carbon.widget.FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"
        ></carbon.widget.FrameLayout>
    </carbon.widget.TransitionLayout>
    <carbon.widget.ImageActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/quick_game_back"
        android:id="@+id/leaderboard"
        android:scaleType="centerCrop"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:elevation="1dp"
        android:layout_gravity="right|top"
        />
</carbon.widget.FrameLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_back"
    tools:context="com.iplay.concatenate.JoinGameAcitvity">

    <RelativeLayout
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN GAME"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textColor="#FFFFFF"
            android:id="@+id/join_title"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


        <carbon.widget.ListView
            android:background="@color/list_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="10dp"
            android:padding="4dp"
            android:alwaysDrawnWithCache="true"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:divider="@drawable/transperent_color"
            android:layout_below="@id/textView"
            app:carbon_overScroll="ifContentScrolls"
            android:dividerHeight="2dp"
            android:textAlignment="4"
            android:id="@+id/invitesView"/>
</RelativeLayout>

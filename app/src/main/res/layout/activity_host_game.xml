<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.iplay.concatenate.HostGameActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:id="@+id/opponent_name"
        android:textSize="30dp"
        android:text="Waiting for opponent"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">
        <com.iplay.concatenate.CircularProfilePicView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:id="@+id/ppic"></com.iplay.concatenate.CircularProfilePicView>
        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_centerInParent="true"
            app:matProg_circleRadius="110dp"
            app:matProg_barWidth="5dp"
            app:matProg_barColor="#1D1D8F"
            app:matProg_linearProgress="true"
            />
    </RelativeLayout>

</carbon.widget.RelativeLayout>

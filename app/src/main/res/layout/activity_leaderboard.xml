<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.iplay.concatenate.LeaderboardActivity"
    >
    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
            <TextView
            android:layout_width="match_parent"
           android:layout_height="40dp"
            android:text="Hall of fame"
                android:gravity="center"
            android:textSize="34dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:nestedScrollingEnabled="true"
            android:layout_marginTop="20dp"

             />

        <carbon.widget.ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/textView"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="18dp"
            android:alwaysDrawnWithCache="true"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:visibility="gone"
            android:divider="@drawable/transperent_color"
            app:carbon_overScroll="ifContentScrolls"
            android:dividerHeight="2dp"
            android:textAlignment="4" android:id="@+id/friendsView"/>

</carbon.widget.RelativeLayout>

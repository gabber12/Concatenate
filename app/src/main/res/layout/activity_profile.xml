<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="com.iplay.concatenate.ProfileActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scaleType="centerCrop"
    android:cropToPadding="true"
    android:id="@+id/cover"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/profile_red_back"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/logoutContainer"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:layout_width="130dp"
                android:background="@drawable/profile_logout"
                android:layout_height="45dp"
                android:gravity="center"


                android:id="@+id/logout_button"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/logoutContainer"
        android:gravity="center"
        android:background="@drawable/splash_background"
        android:layout_gravity="center"
        android:id="@+id/coverContainer">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:layout_centerInParent="true"
            android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:src="@drawable/profile_title"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_heading"
            />
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:id="@+id/profile_box"
                android:layout_below="@id/profile_heading"
                android:layout_centerInParent="true">
            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/profile_box"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
    <com.iplay.concatenate.CircularProfilePicView
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_centerHorizontal="true"
        android:id ="@+id/profile_pic_ac"
        android:layout_gravity="center"
        ></com.iplay.concatenate.CircularProfilePicView>

            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/carbon_black"
                android:layout_below="@id/profile_box"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/profile_name"
                android:textSize="20dp"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/carbon_black"
            android:id="@+id/profile_score"
            android:layout_centerInParent="true"
            android:layout_below="@id/profile_name"
            android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>

</RelativeLayout>
